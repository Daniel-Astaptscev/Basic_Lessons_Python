class Line:
    "Класс для нахождения длины и угла линии"
    
    def __init__(self, coor1, coor2):
        self.coor1 = coor1
        self.coor2 = coor2

    def distance(self):
        from math import sqrt
        x1, y1 = self.coor1
        x2, y2 = self.coor2
        return sqrt((x2 - x1) ** 2 + (y2 - y1) ** 2)

    def slope(self):
        x1, y1 = self.coor1
        x2, y2 = self.coor2
        return (y2 - y1) / (x2 - x1)


class Cylinder:
    "Класс для нахождения объёма и поверхности цилиндра"

    def __init__(self, height=1, radius=1):
        self.height = height
        self.radius = radius

    def volume(self):
        return 3.14 * self.radius ** 2 * self.height

    def surface_area(self):
        return 2 * 3.14 * self.radius * (self.radius + self.height)


class Account:
    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance
 
    def __str__(self): 
        return f'Владелец счёта: {self.owner}\nБаланс счёта: {self.balance}$'
 
    def deposit(self, add):
        self.balance += add
        print('Внесение выполнено')
    
    def withdraw(self, take): 
        if take > self.balance:
            print('Недостаточно средств!')
        else:
            self.balance -= take
            print('Снятие выполнено')
